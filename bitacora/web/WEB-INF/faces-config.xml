<?xml version='1.0' encoding='UTF-8'?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <application>
        <resource-bundle>
          <base-name>internacionalizacion.messages</base-name> 
          <var>messages</var>
        </resource-bundle>
    </application>
  
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registro</from-outcome>
            <to-view-id>/registro.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>loginOk</from-outcome>
            <to-view-id>/principal.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registro.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registroOk</from-outcome>
            <to-view-id>/registroCorrecto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
      <from-view-id>fileUpload.xhtml</from-view-id>
     <navigation-case>
        <from-action>#{fileUploadBean.uploadResume}</from-action>
        <from-outcome>success</from-outcome>
        <to-view-id>/fileUploadAck.xhtml</to-view-id>
    </navigation-case>
     </navigation-rule>
    <navigation-rule>
        <from-view-id>/publicarViaje.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ok</from-outcome>
            <to-view-id>/detalleViaje.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/publicarEntrada.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ok</from-outcome>
            <to-view-id>/detalleViaje.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/publicarViajeAjax.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ok</from-outcome>
            <to-view-id>/principal.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
