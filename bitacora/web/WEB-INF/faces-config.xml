<?xml version='1.0' encoding='UTF-8'?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <application>
        <resource-bundle>
            <base-name>internacionalizacion.messages</base-name> 
            <var>messages</var>
        </resource-bundle>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>
  
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registro</from-outcome>
            <to-view-id>/registro.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>loginOk</from-outcome>
            <to-view-id>/principal.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registro.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registroOk</from-outcome>
            <to-view-id>/registroCorrecto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/publicarEntrada.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>newEntradaOk</from-outcome>
            <to-view-id>/detalleViaje.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/error.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/principal.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>perfilUsuario</from-outcome>
            <to-view-id>/perfilUsuario.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>publicarViaje</from-outcome>
            <to-view-id>/publicarViaje.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>verViaje</from-outcome>
            <to-view-id>/detalleViaje.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/templates/usuarioPlantilla.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>perfilUsuario</from-outcome>
            <to-view-id>/perfilUsuario.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/publicarViaje.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>newViajeOk</from-outcome>
            <to-view-id>/publicarEntrada.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/detalleViaje.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>publicarEntrada</from-outcome>
            <to-view-id>/publicarEntrada.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/modificarPerfil.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>modificarOK</from-outcome>
            <to-view-id>/principal.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
